<%= form_with model: blog do |form| %>
  <div class="form-container">
    <div class="form-group">
      <%= form.label :title, class: 'form-label' %><br>
      <%= form.text_field :title, class: 'form-input' %>
    </div>

     <div class="form-group">
      <%= form.label :description, class: 'form-label' %><br>
      <%= form.text_field :description, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Create Blog', class: 'submit-btn' %>
    </div>
  </div>
<% end %>
