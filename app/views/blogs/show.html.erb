<h1><%= @blog.title %></h1>

<p><%= @blog.description %></p>

<% @blog.posts.each do |post| %>
                <li class="mb-2">
                  <%= link_to post.content, post_path(post) %>
                </li>
<% end %>
              
  

<ul>
  <li><%= link_to "Edit", edit_blog_path(@blog) %></li>
  <li><%= link_to "Destroy", blog_path(@blog), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>