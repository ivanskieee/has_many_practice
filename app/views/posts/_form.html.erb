<%= form_with model: post do |form| %>
  <div class="form-container">

    <div class="form-group">
      <%= form.label :blog_id, "Blog", class: 'form-label' %><br>
      <%= form.collection_select :blog_id, Blog.all, :id, :title, prompt: "Select a title blog", class: 'form-input' %>
    </div>
    
    <div class="form-group">
      <%= form.label :content, class: 'form-label' %><br>
      <%= form.text_field :content, class: 'form-input' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Create Post', class: 'submit-btn' %>
    </div>
    
  </div>
<% end %>

